{
  "name": "lit-boiler-template",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint:style": "stylelint \"**/*.{scss,css}\" --ignore-path .gitignore --fix",
    "lint:pre": "prettier -w --ignore-path .gitignore .",
    "lint:es": "eslint --fix --ext .js,.ts --ignore-path .gitignore .",
    "lint:js": "yarn lint:pre && yarn lint:es",
    "lint": "yarn lint:js && yarn lint:style",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "lit": "^2.6.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "npm:@storybook/addon-actions@latest",
    "@storybook/addon-essentials": "npm:@storybook/addon-essentials@latest",
    "@storybook/addon-links": "npm:@storybook/addon-links@latest",
    "@storybook/web-components": "npm:@storybook/web-components@latest",
    "eslint": "npm:eslint@latest",
    "eslint-config-prettier": "npm:eslint-config-prettier@latest",
    "eslint-plugin-lit": "npm:eslint-plugin-lit@latest",
    "eslint-plugin-storybook": "npm:eslint-plugin-storybook@latest",
    "postcss-lit": "npm:postcss-lit@latest",
    "prettier": "npm:prettier@latest",
    "sass": "^1.49.8",
    "sass-loader": "^10.2.0",
    "storybook-builder-vite": "npm:storybook-builder-vite@latest",
    "stylelint": "npm:stylelint@latest",
    "stylelint-config-prettier": "npm:stylelint-config-prettier@latest",
    "stylelint-config-recess-order": "npm:stylelint-config-recess-order@latest",
    "stylelint-config-standard-scss": "npm:stylelint-config-standard-scss@latest",
    "vite": "npm:vite@latest"
  }
}
